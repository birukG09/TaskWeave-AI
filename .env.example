# Application Environment
APP_ENV=dev
SECRET_KEY=your_super_secret_key_change_in_production_must_be_at_least_32_characters_long
WEB_BASE_URL=http://localhost:5000
API_BASE_URL=http://localhost:8000

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/taskweave
REDIS_URL=redis://localhost:6379/0

# JWT Configuration
JWT_ALGORITHM=HS256
JWT_ACCESS_TTL_MIN=30
JWT_REFRESH_TTL_MIN=43200

# AI Provider API Keys
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# AWS Configuration (Optional)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET=your_s3_bucket_name

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_email_password

# OAuth Provider Configuration
OAUTH_GOOGLE_CLIENT_ID=your_google_client_id
OAUTH_GOOGLE_CLIENT_SECRET=your_google_client_secret
OAUTH_GITHUB_CLIENT_ID=your_github_client_id
OAUTH_GITHUB_CLIENT_SECRET=your_github_client_secret

# Integration Provider Configuration
SLACK_CLIENT_ID=your_slack_client_id
SLACK_CLIENT_SECRET=your_slack_client_secret
TRELLO_KEY=your_trello_api_key
TRELLO_TOKEN=your_trello_token
NOTION_SECRET=your_notion_integration_secret
GMAIL_CLIENT_ID=your_gmail_client_id
GMAIL_CLIENT_SECRET=your_gmail_client_secret

# Security Configuration
ALLOWED_ORIGINS=["http://localhost:3000","http://localhost:5000"]
ALLOWED_HOSTS=["localhost","127.0.0.1","*"]
